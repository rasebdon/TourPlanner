<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourPlanner.UI.Views"
        xmlns:viewModels="clr-namespace:TourPlanner.UI.ViewModels"
        xmlns:System="clr-namespace:System;assembly=System.Runtime" x:Class="TourPlanner.UI.MainWindow"
        mc:Ignorable="d"
        Title="Tour Planner" Height="450" Width="800">
    <Window.DataContext>
        <viewModels:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <!-- TODO: Put Header, MenuPanel and SearchPanel into another xaml files -->

        <!-- Header -->
        <Label x:Name="Title" Grid.Row="0" Content="Tour Planner" FontSize="20px"/>

        <!-- MenuPanel -->
        <Menu x:Name="MenuPanel" Grid.Row="1">
            <MenuItem Name="FileMenuItem" Header="_File" Height="25">
                <MenuItem Header="_New" />
                <MenuItem Header="_Open" />
                <MenuItem Header="_Save" />
                <MenuItem Header="_Save As" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
            <MenuItem Name="EditMenuItem" Header="_Edit" Height="25">
                <MenuItem Header="_Delete" />
                <MenuItem Header="_Settings" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
            <MenuItem x:Name="OptionsButton" Header="_Options" Height="25">
                <MenuItem Header="_Test01" />
                <MenuItem Header="_Test02" />
                <Separator />
                <MenuItem Header="_Test03" />
            </MenuItem>
            <MenuItem x:Name="HelpButton" Header="_Help" Height="25">
                <MenuItem Header="_Test01" />
                <MenuItem Header="_Test02" />
                <Separator />
                <MenuItem Header="_Test03" />
            </MenuItem>
        </Menu>

        <!-- SearchPanel -->
        <Grid x:Name="SearchPanel" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="SearchBar" Grid.Column="0"/>
            <Button x:Name="SearchButton" Grid.Column="1" Content="Search"/>
        </Grid>

        <!-- ContentPanel -->
        <Grid x:Name="ContentPanel" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="150" Width="1*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition MinWidth="300" Width="4*"/>
            </Grid.ColumnDefinitions>

            <!-- ListView -->
            <local:ListView Grid.Column="0"></local:ListView>

            <GridSplitter x:Name="ContentGridSplitter" Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>
            
            <!-- TourContentPanel -->
            <Grid x:Name="TourContentPanel" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition MinHeight="150px" Height="*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition MinHeight="150px" Height="*"/>
                </Grid.RowDefinitions>

                <!-- MapView-->
                <local:MapView Grid.Row="0"></local:MapView>

                <GridSplitter x:Name="TourContentGridSplitter" Height="5" Grid.Row="1" HorizontalAlignment="Stretch"/>
                
                <!-- LogView -->
                <local:LogView Grid.Row="2"></local:LogView>
            </Grid>
        </Grid>

    </Grid>
</Window>
    